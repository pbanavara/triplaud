<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    

    <TextView
        android:id="@+id/chMeetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Please select one of these meeting place choices. The app will then search for meeting places based on the selected theme and the selected contact&apos;s current locations"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RadioGroup
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radioGroup1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/chMeetText"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <RadioButton
            android:id="@+id/chRadioCoffee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:checked="true"
            android:paddingTop="10dp"
            android:text="Coffee/Cafe" />

        <RadioButton
            android:id="@+id/chRadioBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Bar/Pub" />

        <RadioButton
            android:id="@+id/chRadioRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Restaurant" />
    </RadioGroup>
    <Button
        android:id="@+id/chButtonYes"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/radioGroup1"
        android:paddingTop="10dp"
        android:text="OK" />

    <Button
        android:id="@+id/chButtonNo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/chButtonYes"
        android:layout_alignBottom="@+id/chButtonYes"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:text="Cancel" />

</RelativeLayout>